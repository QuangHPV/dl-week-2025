{
  "manifest_version": 3,
  "name": "AI Text Analysis Tool",
  "version": "1.0",
  "description": "Analyze text for AI generation and fact checking",
  "permissions": ["scripting", "contextMenus", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "AI Text Analysis Tool"
  },
  "host_permissions": ["http://127.0.0.1:8000/"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
