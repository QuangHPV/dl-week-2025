{
  "manifest_version": 3,
  "name": "YouTube Thumbnail Replacer",
  "version": "1.0",
  "description": "Replaces all YouTube thumbnails with a custom image.",
  "permissions": ["scripting", "contextMenus", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://127.0.0.1:8000/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
